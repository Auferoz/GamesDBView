---
interface Props {
    id:                   number;
    title:                string;
    poster:               string;
	}

const { id, title, poster } = Astro.props;

const imageSrc = `https://images.igdb.com/igdb/image/upload/t_1080p/${poster}.webp`;

---
<article>
	<a href=`/Games/2024/game/${id}`>
		<img 
		transition:name={`${title}-image`}
		src={imageSrc} 
		alt={title}
		class="rounded-lg border hover:scale-105 transition-all">
	</a>
</article>